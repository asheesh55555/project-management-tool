<!DOCTYPE html>
<html>

<head>
    <title>ProjectManagementTool</title>
    <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
            <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg bg-secondary fixed-top text-uppercase" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="/">P M Tool</a>
            <button class="navbar-toggler navbar-toggler-right text-uppercase bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <!-- Menu -->
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <% if user_signed_in? %>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="/">Dashboard</a>
                         </li>


                         <li class="nav-item mx-0 mx-lg-1">
                           <%= link_to("#{current_user.email}", '#email',  class: "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" )%>
                        </li>
                        <% if current_user.has_role? :admin %>
                            <li class="nav-item mx-0 mx-lg-1">
                               <%= link_to("Admin", '#Admin',  class: "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" )%>
                            </li>
                        <% end %>
                        <li class="nav-item mx-0 mx-lg-1">
                            <%= link_to('Logout', destroy_user_session_path, method: :delete,  class: "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" )%>
                        </li>

                    <% else %>
                        <li class="nav-item mx-0 mx-lg-1">
                            <%= link_to('Login', new_user_session_path,  class: "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger") %>
                        </li>

                         <li class="nav-item mx-0 mx-lg-1">
                            <%= link_to('Signup', new_user_registration_path,  class: "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger") %>
                        </li>
                    <% end %>
                </ul>
            </div>
    </nav>
    <br>
    <section>
        <div class="container">
        <p class="notice"><%= notice %></p>
             <%= yield %>       
        </div>
    </section>
    
</body>