<strong>Project Name:- <%=@project.name %> <i>Tasks</i></strong>


<table>
  <thead>
    <tr>
      <th>Task Name</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= link_to 'Show', project_task_path(task.project, task) %></td>
        <td><%= link_to 'Edit', edit_project_task_path(task.project, task) %></td>
        <td><%= link_to ' Add Dependencies', project_task_dependencies_path(task.project, task) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Task', new_project_task_path %> |
<%= link_to "Back to Projects", projects_path %>
